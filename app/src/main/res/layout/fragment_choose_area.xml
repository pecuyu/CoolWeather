<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0fff"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context="com.yu.coolweather.ChooseAreaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#6c8">

        <TextView
            android:id="@+id/id_tv_title_choose_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Title"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_btn_back_choose_area"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_back"
            tools:ignore="RtlCompat,RtlHardcoded" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_refresh_choose_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/id_lv_choose_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
